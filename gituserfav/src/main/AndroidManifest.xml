<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.varoa.gituserfav">

    <uses-permission android:name="com.varoa.gituser.READ_DATABASE" />
    <uses-permission android:name="com.varoa.gituser.WRITE_DATABASE" />

    <!-- THE POWAH OF GLIDE -->
    <!-- as long as Internet Permission is listed, glide can load from imgUrl -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GitUserFavApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>